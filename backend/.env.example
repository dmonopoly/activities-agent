# -----------------------------------
# API Keys
# -----------------------------------
# OPENROUTER_API_KEY=
# GOOGLE_MAPS_API_KEY=
# OPENWEATHER_API_KEY=

# -----------------------------------
# Network Settings
# -----------------------------------
# Additional CORS_ORIGINS beyond hard-coded ones
CORS_ORIGINS=

# -----------------------------------
# Feature Flags
# -----------------------------------
# Cost control flags
# Global flag: set to true to enable ALL paid APIs, overriding individual settings
ENABLE_PAID_APIS_OVERRIDE_ALL=false

# Individual API flags: toggle specific APIs independently
ENABLE_OPENROUTER_API=true
ENABLE_GOOGLE_MAPS_API=false
ENABLE_WEATHER_API=false

# -----------------------------------
# MongoDB (Production only)
# -----------------------------------
# Leaving this unset for local development will make the app use JSON file storage
# MONGODB_URI=

# Set these for production deployments (e.g., Vercel)
MONGODB_DATABASE=activities_agent
MONGODB_USER_PREFERENCES_COLLECTION=user_preferences
MONGODB_CHAT_HISTORY_COLLECTION=chat_histories
